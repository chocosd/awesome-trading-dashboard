{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": false,
    "target": "es2022",
    "customConditions": ["@awesome-trading-dashboard/source"],
    "baseUrl": ".",
    "paths": {
      "@awesome-trading-dashboard/trading-api": ["trading-api/src/index.ts"]
    }
  }
}
